    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "ably": "^2.15.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.555.0",
    "next": "16.0.10",
    "next-auth": "^5.0.0-beta.30",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
