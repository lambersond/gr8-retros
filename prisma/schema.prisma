model RetroSession {
  id        String   @id @default(cuid())
  name      String?
  org       String?  @default("Temporary")
  isTemp    Boolean  @default(true)
  isPrivate Boolean  @default(false)
  creatorId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cards     Card[]
  users     UserRetroSession[]
}

model ActionItem {
  id        String   @id @default(cuid())
  content   String
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  isDone    Boolean  @default(false)
  createdBy String   @default("Anonymous")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id             String         @id @default(cuid())
  content        String
  column         String
  creatorId      String         
  retroSessionId String
  retroSession   RetroSession   @relation(fields: [retroSessionId], references: [id], onDelete: Cascade)
  isDiscussed    Boolean        @default(false)
  upvotedBy      String[]       @default([])
  position       Int            @default(0)
  createdBy      String         @default("Anonymous")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  actionItems    ActionItem[]

  @@index([retroSessionId])
  @@index([createdAt])
}

// -------------------------
// Many-to-many relationships
// --------------------------

model UserRetroSession {
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  retroSession RetroSession @relation(fields: [retroSessionId], references: [id])
  retroSessionId String

  @@id([userId, retroSessionId])
}